<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                tools:ignore="MissingConstraints"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:id="@+id/imgUser"
                android:layout_marginLeft="15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="MissingConstraints"
                android:text="John Doe"
                app:layout_constraintLeft_toRightOf="@id/imgUser"
                app:layout_constraintTop_toTopOf="parent"
                android:textStyle="bold"
                android:textSize="8pt"
                android:layout_marginLeft="5dp"
                android:id="@+id/textUser"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="MissingConstraints"
                android:text="di"
                app:layout_constraintLeft_toRightOf="@id/imgUser"
                app:layout_constraintTop_toBottomOf="@id/textUser"
                android:textStyle="normal"
                android:textSize="7pt"
                android:layout_marginLeft="5dp"
                android:id="@+id/textdi"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="MissingConstraints"
                android:text="Tempat"
                app:layout_constraintLeft_toRightOf="@id/textdi"
                app:layout_constraintTop_toBottomOf="@id/textUser"
                android:textStyle="bold"
                android:textSize="7pt"
                android:layout_marginLeft="5dp"
                android:id="@+id/textlocation"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints"
                android:text="INFORMASI"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="MissingConstraints"
                app:layout_constraintTop_toBottomOf="@id/imgUser"
                android:layout_marginTop="10dp"
                android:text="Laporan Pengaduan Terkait"
                android:textSize="9pt"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:id="@+id/textTitlePengaduan"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/textTitlePengaduan"
                android:id="@+id/textIsiPengaduan"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:text="Isi Pengaduan"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"/>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                tools:ignore="MissingConstraints"
                app:layout_constraintTop_toBottomOf="@id/textIsiPengaduan"
                android:src="@drawable/ic_like_white"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:id="@+id/imgLikePengaduan"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="MissingConstraints"
                app:layout_constraintTop_toBottomOf="@id/textIsiPengaduan"
                app:layout_constraintLeft_toRightOf="@id/imgLikePengaduan"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:text="10"
                android:id="@+id/textCountLikePengaduan"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="10dp"/>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                tools:ignore="MissingConstraints"
                app:layout_constraintTop_toBottomOf="@id/textIsiPengaduan"
                android:src="@drawable/ic_comment_white"
                app:layout_constraintLeft_toRightOf="@id/textCountLikePengaduan"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/imgCommentPengaduan"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="MissingConstraints"
                app:layout_constraintTop_toBottomOf="@id/textIsiPengaduan"
                app:layout_constraintLeft_toRightOf="@id/imgCommentPengaduan"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:text="10"
                android:id="@+id/textCountCommentPengaduan"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="MissingConstraints"
                android:text="berhari hari yg lalu"
                app:layout_constraintTop_toBottomOf="@id/textIsiPengaduan"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:textSize="7pt"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="10dp"/>
        </android.support.constraint.ConstraintLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>