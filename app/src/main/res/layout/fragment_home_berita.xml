<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/linearNduwur"
            android:layout_margin="5dp"
            android:layout_alignParentTop="true">

            <EditText
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="40dp"
                android:background="@drawable/editext_background_round"
                android:hint="Cari Disini"
                android:padding="5dp"
                android:inputType="text"
                android:layout_margin="5dp"
                android:id="@+id/et_search"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="match_parent"
                tools:ignore="Suspicious0dp"
                android:src="@drawable/ic_search"
                android:id="@+id/imgSearch"/>

        </LinearLayout>

        <com.facebook.shimmer.ShimmerFrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/shimmer"
            android:layout_below="@id/linearNduwur">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <include layout="@layout/placeholder_berita"/>
                <include layout="@layout/placeholder_berita"/>
                <include layout="@layout/placeholder_berita"/>
                <include layout="@layout/placeholder_berita"/>
                <include layout="@layout/placeholder_berita"/>
                <include layout="@layout/placeholder_berita"/>
                <include layout="@layout/placeholder_berita"/>
            </LinearLayout>


        </com.facebook.shimmer.ShimmerFrameLayout>

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rcBerita"
            android:layout_marginBottom="10dp"
            android:layout_below="@id/linearNduwur">
        </android.support.v7.widget.RecyclerView>

    </RelativeLayout>



</android.support.v4.widget.NestedScrollView>